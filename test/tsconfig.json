{
    "include": ["../test/**/*"],
    "exclude": ["node_modules/@types/node/globals.d.ts"],
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "Node",

        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,

        "lib": ["DOM", "ESNext"],

        // "allowJs": true,
        "checkJs": true,

        "rootDir": "./",
        "outDir": "",

        "baseUrl": "../build/",
        "paths": {
            "types": ["./types.d.ts"],
            "drivers/indexeddb": ["./drivers/indexeddb"],
            "drivers/websql": ["./drivers/websql"],
            "drivers/localstorage": ["./drivers/localstorage"]
        }
    }
}
